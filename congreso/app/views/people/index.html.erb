<h1>Listing people</h1>

<table>
  <tr>
    <th>Photo</th>
    <th>Name</th>
    <th>Province</th>
    <th>Party</th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><img src='<%= person.photo_small %>'/></td>
    <td><%= link_to(person,edit_person_path(person)) %></td>
    <td><%= link_to(person.province,edit_province_path(person.province)) %></td>
    <td><%= link_to(person.party,edit_party_path(person.party)) %></td>
    <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

