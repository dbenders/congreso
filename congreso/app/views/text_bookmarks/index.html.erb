<% content_for :head do -%>
  <style>
    .manual {
      color: green;
      font-weight: bold;
    }
  </style>
<% end %>

<h1>text bookmarks</h1>

<table>
  <tr>
    <th>Pos</th>
    <th>Length</th>
    <th>Person</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>    
  </tr>

<% @text_bookmarks.each do |text_bookmark| %>
  <tr>
    <td valign='top'><%= text_bookmark.pos %></td>
    <td valign='top'><%= text_bookmark.length %></td>
    <td valign='top' class="<%= text_bookmark.bookmark ? text_bookmark.bookmark.matchtyp : ''%>"><%= text_bookmark.person %></td>
    <td valign='top'><%= text_bookmark.text %></td>
    <td valign='top'><%= link_to 'Edit', edit_session_text_bookmark_path(@sesion,text_bookmark) %></td>
    <td valign='top'><%= link_to 'Destroy', session_text_bookmark_path(@sesion,text_bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td valign='top'><%= link_to 'Merge', session_text_bookmark_merge_up_path(@sesion,text_bookmark) %></td    
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Rebuild', rebuild_session_text_bookmarks_path(@sesion) %>
<%= link_to 'New text bookmark', new_session_text_bookmark_path(@sesion) %>